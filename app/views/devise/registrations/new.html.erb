<h2>会員情報入力</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="nickname">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.last_name_field :last_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.first_name_field :first_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :last_furigana %><br />
    <%= f.last_furigana_field :last_furigana, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :first_furigana %><br />
    <%= f.first_furigana_field :first_furigana, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :birth_day %><br />
    <%= f.birth_day_field :birth_day, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "会員登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
